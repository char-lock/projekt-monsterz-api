{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  },
  "lib": ["es2015"],
  "include": ["src"],
  "exclude": ["node_modules"]
}
